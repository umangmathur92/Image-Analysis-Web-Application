<!DOCTYPE html>
<html lang="en">
<head>
    <title>View Experiment</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://use.fontawesome.com/8a92be1af5.js"></script>

</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Welcome <%= uname %>!</h1>
            <form class="form" method="POST" action="/logout">
                <button class="btn btn-lg btn-primary btn-block" type="submit">
                    Logout
                </button>
            </form>
        </div>
    </div>

    <div class="row">

        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addImageModal">
            Add More Images
        </button>

        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#deleteImageModal">
            Delete Images
        </button>

        <button type="button" class="btn btn-primary checkall" style="float:right">Select All</button>

        <!-- add image modal -->
        <div class="modal fade" id="addImageModal" tabindex="-1" role="dialog" aria-labelledby="addImageModal"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title">Add More Images</h4>
                    </div>

                    <div class="modal-body">

                        <% for (var i = 0; i < data.length; i++) { %>

                        <form class="form" method="POST" action="<%= data[i].exp_id %>"
                              enctype="multipart/form-data">

                            <label for="image">Select Images to add to <%= data[i].exp_title %></label>
                            <input type="file" name="expImage" multiple accept="image/*" required autofocus/><br>

                            <button class="btn btn-primary btn-block" type="submit">
                                Add Images
                            </button>
                            <% } %>

                        </form>
                    </div>

                </div>
            </div>
        </div>

        <!--delete image modal-->
        <div class="modal fade" id="deleteImageModal" tabindex="-1" role="dialog" aria-labelledby="deleteImageModal"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title">Delete Images</h4>
                    </div>

                    <div class="modal-body">

                        <p id="demo"> No Image Selected </p>
                        <p id="demo1"></p>

                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                        <button class="btn btn-primary" type="submit" id="deleteBtn">
                            Delete Images
                        </button>
                    </div>

                </div>
            </div>
        </div>

    </div>

    <br>
    <br>

    <div class="row">

        <% for (var i = 0; i < data.length; i++) { %>
        <% for (var j = 0; j < eImage.length; j++) { %>

        <div class="col-md-4">
            <input class="checkhour" type="checkbox" name="<%= eImage[j].id %>" id="<%= eImage[j].id %>"/>
            <div class="thumbnail">
                <a href="editExperiment/<%= eImage[j].id %> ">
                    <p><img class=scaled src="<%= eImage[j].exp_images %>" alt="Add a New Experimnet Here!">
                    <hr>
                    <p><b>Exp Id: <%= data[i].exp_id %> </b>
                </a>
            </div>
        </div>

        <% } %>
        <% } %>

    </div>

</div>

<script>

    $checkbox = $('.checkhour');

    $checkbox.click(checkArray);
    var chkArray = [];

    function checkArray() {
        chkArray = $.map($checkbox, function (el) {
            if (el.checked) {
                return el.id
            }
        });
        console.log(chkArray);
        document.getElementById("demo").innerHTML = chkArray;

        if (chkArray.length === 0) {
            document.getElementById("demo1").innerHTML = "No Image Selected";
        }
        if (chkArray.length === 1) {
            document.getElementById("demo1").innerHTML = "Are you sure you want to delete " + chkArray.length + " image?";
        } else {
            document.getElementById("demo1").innerHTML = "Are you sure you want to delete " + chkArray.length + " images?";
        }
    }

    var clicked = false;
    $(".checkall").on("click", function () {
        $(".checkhour").prop("checked", !clicked);
        clicked = !clicked;
        chkArray = $.map($checkbox, function (el) {
            if (el.checked) {
                return el.id
            }
        });
        console.log(chkArray);
        document.getElementById("demo").innerHTML = chkArray;

        if (chkArray.length === 1) {
            document.getElementById("demo1").innerHTML = "Are you sure you want to delete " + chkArray.length + " image?";
        } else {
            document.getElementById("demo1").innerHTML = "Are you sure you want to delete " + chkArray.length + " images?";
        }

        if (chkArray.length === 0) {
            document.getElementById("demo1").innerHTML = "No Image Selected";
        }
    });

    $("#deleteBtn").click(function (e) {
        e.preventDefault();

        const data = {foo: chkArray}
        $.ajax({
            type: "POST",
            url: window.location.href + "/deleteImages",
            data: {images: JSON.stringify(chkArray)},
            success: function (result) {
                location.href = window.location.href
//                location.reload()
            },
            error: function (err) {
                console.log(err)
            }
        });
    });

</script>

</body>
</html>